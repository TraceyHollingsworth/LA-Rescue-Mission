<div class="container">
  <h3><%= @question.title %></h3>
  <p><%= @question.description %></p>
  <p><%= link_to 'Edit', edit_question_path(@question.id), class: "btn btn-warning btn-xs"%>
   | <%= link_to 'Delete', question_path(@question.id), class: "btn btn-warning btn-xs", method: :delete, question: { confirm: 'Are you sure?' } %>
   | <%= link_to 'Back to Questions', questions_path, class: "btn btn-warning btn-xs" %></p>
</div>
