<div class="container">
  <h3><%= @question.title %></h3>
  <p><%= markdown(@question.description) %></p>
  <p><ul><%= link_to 'Edit', edit_question_path(@question.id), class: "btn btn-warning btn-xs"%></ul>
  <ul><%= button_to 'Delete', question_path(@question.id), class: "btn btn-warning btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></ul>
  <ul><%= link_to 'Back to Questions', questions_path, class: "btn btn-warning btn-xs" %></p></ul>
</div>

<div class="container">
  <% @question.answers.each do |answer| %>
  <p><%= answer.description %><hr></p>
  <% end %>
</div>

<div class="container">
  <%= render 'ansform' %>
</div>
